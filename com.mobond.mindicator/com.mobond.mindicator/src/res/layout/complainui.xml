<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="1" android:id="false" android:background="ffffff" android:layout_width="-1" android:layout_height="-1">
	<ScrollView android:layout_width="-1" android:layout_height="-1" android:layout_above="false">
		<LinearLayout android:orientation="1" android:layout_width="-1" android:layout_height="-2">
			<TextView android:textStyle="0x1" android:textColor="000" android:layout_gravity="0x3" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginTop="15dp" android:layout_marginRight="8dp" android:text="YOUR NAME" />
			<EditText android:id="false" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="15dp" android:inputType="0x1" />
			<TextView android:textStyle="0x1" android:textColor="000" android:layout_gravity="0x3" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="PHONE NUMBER" />
			<EditText android:id="false" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="15dp" android:inputType="0x1" />
			<TextView android:textStyle="0x1" android:textColor="000" android:layout_gravity="0x3" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="SUBJECT" />
			<EditText android:gravity="0x33" android:id="false" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="15dp" android:ems="10" android:inputType="0x20001" />
			<TextView android:textStyle="0x1" android:textColor="000" android:layout_gravity="0x3" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="MESSAGE" />
			<EditText android:gravity="0x33" android:id="false" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="15dp" android:ems="10" android:inputType="0x20001" />
			<LinearLayout android:gravity="0x11" android:orientation="0" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp">
				<Button android:textStyle="0x1" android:id="false" android:paddingRight="5dp" android:layout_width="-2" android:layout_height="-2" android:text="Attach Picture   " android:drawableLeft="res/drawable-mdpi-v4/attach.png" android:layout_alignParentBottom="true" android:onClick="onAttachPhotoButtonClicked" />
				<Button android:textStyle="0x1" android:id="false" android:layout_width="-2" android:layout_height="-2" android:text="Remove" android:layout_alignParentBottom="true" android:onClick="onRemovePhotoButtonClicked" />
			</LinearLayout>
			<TextView android:textColor="000" android:layout_gravity="0x3" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:text="(.jpg, .jpeg)" />
			<TextView android:textColor="00ff" android:layout_gravity="0x3" android:id="false" android:layout_width="-2" android:layout_height="-2" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="15dp" android:text="Not compulsory" />
		</LinearLayout>
	</ScrollView>
	<Button android:textStyle="0x1" android:id="false" android:layout_width="-1" android:layout_height="-2" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="Send" android:layout_alignParentBottom="true" android:onClick="onSendButtonClicked" />
</RelativeLayout>
